{
  "name": "rtv-server",
  "version": "1.21.1",
  "description": "Remote TV control server for developers",
  "scripts": {
    "clean:dist": "rm -rf dist",
    "test:unit": "mocha test/unit",
    "test:api": "mocha test/setup.ts test/specs --timeout=10000",
    "test": "npm run test:unit && npm run test:api",
    "test-cov": "nyc --reporter=html --reporter=text npm t",
    "test-inspect": "npm t -- --inspect",
    "test-log": "SHOW_LOGS=1 npm t",
    "test-nock": "DEBUG=nock.* npm run test",
    "build": "npm run clean:dist && npx tsc",
    "start": "node dist/cli.js",
    "dev": "nodemon",
    "typecheck": "tsc --noEmit"
  },
  "bin": {
    "rtv-server": "dist/cli.js"
  },
  "main": "dist/main.js",
  "types": "types.d.ts",
  "dependencies": {
    "archiver": "^3.0.0",
    "await-timeout": "^0.3.0",
    "body-parser": "^1.18.3",
    "commander": "^2.18.0",
    "cookie": "^0.4.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.0.0",
    "find-up": "^5.0.0",
    "form-data": "^2.5.1",
    "fs-extra": "^7.0.0",
    "http-proxy": "^1.18.1",
    "is-docker": "^2.1.1",
    "joi": "^17.5.0",
    "kill-port": "^1.6.1",
    "lodash": "^4.17.21",
    "lodash-id": "^0.14.0",
    "loggee": "^0.1.2",
    "lowdb": "^1.0.0",
    "ms": "^2.1.2",
    "multer": "^1.4.4",
    "node-fetch": "^2.6.6",
    "p-retry": "^4.2.0",
    "promise-controller": "^0.5.2",
    "promise.any": "^2.0.1",
    "pug": "^3.0.2",
    "raw-body": "^2.4.1",
    "read-pkg-up": "^6.0.0",
    "unzipper": "^0.9.3",
    "uuid": "^8.3.2",
    "wakeonlan": "^0.1.0",
    "websocket": "^1.0.28",
    "websocket-as-promised": "^2.0.1",
    "ws": "^8.3.0",
    "xml2js": "^0.4.19"
  },
  "license": "MIT"
}
